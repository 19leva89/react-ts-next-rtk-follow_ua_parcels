generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id            String         @id @default(cuid()) @map("_id")
  email         String         @unique
  password      String
  name          String
  isConfirmed   Boolean        @default(false) @map("is_confirmed")
  confirmCodes  ConfirmCode[]
  recoveryCodes RecoveryCode[]
  createdTrack  Track[]
}

model Track {
  id        String      @id @default(cuid()) @map("_id")
  number    String
  carrier   Int
  name      String      @default("Unnamed track")
  archived  Boolean     @default(false)
  //
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  //
  TrackInfo TrackInfo[]
  //
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model ConfirmCode {
  id        String   @id @default(cuid()) @map("_id")
  code      String
  expiresAt DateTime
  //
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@map("confirm_code")
}

model RecoveryCode {
  id        String   @id @default(cuid()) @map("_id")
  code      String
  expiresAt DateTime
  //
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@map("recovery_code")
}

model TrackInfo {
  id           String @id @default(cuid()) @map("_id")
  shippingInfo String @map("shipping_info")
  latestStatus String @map("latest_status")
  latestEvent  String @map("latest_event")
  timeMetrics  String @map("time_metrics")
  milestone    String
  miscInfo     String @map("misc_info")
  tracking     String
  //
  track        Track  @relation(fields: [trackId], references: [id])
  trackId      String

  @@map("track_info")
}
