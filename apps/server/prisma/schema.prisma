// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String
  isConfirmed   Boolean        @default(false)
  confirmCodes  ConfirmCode[]
  recoveryCodes RecoveryCode[]
  createdTrack  Track[]
}

model Track {
  id         String      @id @default(uuid())
  number     String
  carrier    Int
  name       String      @default("Unnamed track")
  createDate DateTime    @default(dbgenerated("current_timestamp"))
  archived   Boolean     @default(false)
  user       User        @relation(fields: [userId], references: [id])
  userId     String
  TrackInfo  TrackInfo[]
}

model ConfirmCode {
  id        String   @id @default(uuid())
  userId    String
  code      String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}

model RecoveryCode {
  id        String   @id @default(uuid())
  userId    String
  code      String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}

model TrackInfo {
  id           String @id @default(uuid())
  shippingInfo String
  latestStatus String
  latestEvent  String
  timeMetrics  String
  milestone    String
  miscInfo     String
  tracking     String
  track        Track  @relation(fields: [trackId], references: [id])
  trackId      String
}
